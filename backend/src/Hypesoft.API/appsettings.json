{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://admin:admin@localhost:27017",
    "DatabaseName": "HypesoftDB"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/hypesoft",
    "Audience": "account",
    "RequireHttpsMetadata": false
  },
  "Note": "Para Docker, o Authority será sobrescrito via variável de ambiente: http://keycloak:8080/realms/hypesoft"
}